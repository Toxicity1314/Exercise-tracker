{
  "devDependencies": {
    "husky": "^8.0.0",
    "lint-staged": "^13.2.3",
    "prettier": "^2.8.8",
    "@prettier/plugin-ruby": "^3.2.2"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npx lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,json,css,scss,html,md,rb}": [
      "prettier --write .",
      "git add"
    ]
  },
  "scripts": {
    "prepare": "husky install",
    "lint:fix": "lint-staged"
  }
}
